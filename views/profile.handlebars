<div>
  <div>
    <h2>Dashboard: Welcome!</h2>
  </div>
</div>

<div>
  <div>
    <h3>Create a new post:</h3>
    <form class="form new-post-form">
      {{! passing title from Post model }}
      <div>
        <label for="post-title">title:</label>
        <input
          class="form-input"
          type="text"
          id="post-title"
          name="post-title"
        />
      </div>
      {{! passing content from Post model }}
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea
          class="form-input"
          id="post-content"
          name="post-content"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
    <div class="post-list">
      <h3>Current Posts:</h3>

      {{#each posts as |post|}}
        <div>
          <div>
            {{!-- <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4> --}}
            {{! MB: PENDING- NEED TO FIGURE OUT HOW TO TURN EVERY post INTO A LINK THAT TAKES IT TO THAT SPECIFIC POST USING id }}
            <h4>{{post.title}}</h4>
            <p>{{post.content}}</p>
            <p>{{post.date_created}}</p>
          </div>
          <div>
            <button data-id="{{post.id}}">DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>